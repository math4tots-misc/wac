fn __test_str_format() {
    var s = "Hello %s" % ["world"]
    AssertEq(s, "Hello world")

    s = "before..%s..%safter" % ['aaa', 'bbb']
    AssertEq(s, 'before..aaa..bbbafter')

    s = "%sbefore..%s..after" % ['aaa', 'bbb']
    AssertEq(s, 'aaabefore..bbb..after')

    s = "hello" % []
    AssertEq(s, 'hello')
}

fn __test_str_less_than() {
    Assert('hello' < 'zz')
}
