

fn __test_i32_str() {
    Assert(str(123456) == '123456')
    Assert(str(0) == '0')
    AssertEq(str(-1), '-1')
    Assert(str(8585) == '8585')
    Assert(str(-8585) == '-8585')
    Assert(str(-1000000000) == '-1000000000')
    Assert(str(1000000000) == '1000000000')
}

fn __test_i32_hex_literals() {
    AssertEq(0xFF, 255)
    AssertEq(0xA, 10)
}

fn __test_i32_binary_literals() {
    AssertEq(0b1111, 1 + 2 + 4 + 8)
    AssertEq(0b1010, 2 + 8)
}

fn __test_i32_const_neg() {
    AssertEq(0 - 1, -1)
    AssertEq(0 - 13, __FOR_TEST_I32_CONST_NEG)
}

const __FOR_TEST_I32_CONST_NEG = -13
