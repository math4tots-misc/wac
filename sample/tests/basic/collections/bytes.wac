
fn __test_bytes_misc() {
    var bts = __new_bytes()
    AssertEq(SizeOf(bts), 0)

    __bytes_push(bts, 10)
    AssertEq(SizeOf(bts), 1)

    AssertEq(bts[0], 10)

    __bytes_push(bts, 40)

    AssertEq(repr(bts), 'bytes[10, 40]')
}


fn __test_bytes_build() {
    var bb = bytes([1, 2, 3])
    AssertEq(repr(bb), 'bytes[1, 2, 3]')
    bb.Extend([$char('a'), $char('b'), $char('c')])
    AssertEq(repr(bb), 'bytes[1, 2, 3, 97, 98, 99]')
}

fn __test_bytes_str() {
    var s = str(bytes([
        $char('a'),
        $char('b'),
        $char('c'),
    ]))
    AssertEq(s.Size(), 3)
    AssertEq(s, 'abc')
}
