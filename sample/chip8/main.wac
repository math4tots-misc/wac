# CHIP-8 emulator

record Chip8 {
    # 4096 bytes of memory
    memory list

    # 15 8-bit general purpose registers, V0, V1, .. VE
    # The 16th register is used for the carry flag
    registers list
}

fn Chip8() Chip8 {
    var memory = [0] * 4096
    var registers = [0] * 16

    new Chip8(
        memory,
        registers,
    )
}

fn Main() {
    var chip8 = Chip8()
    Print(chip8.registers)
}
